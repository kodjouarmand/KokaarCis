@model CommissionPaymentViewModel

@{
    Layout = null;
}

<form asp-action="Cancel" asp-route-id="@Model.CommissionPayment.Id" onsubmit="return jQueryAjaxPost(this);">
    <div class="row ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CommissionPayment.Id" />
        <div class="input-group-sm col-12">
            <div class="form-group row pt-1">
                <div class="input-group-sm col-4">
                    Motif de la suppressionn
                </div>
                <div class="input-group-sm col-7">
                    <textarea asp-for="CommissionPayment.CancelationReason" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group row pt-2 pb-2">
                <div class="d-inline-block">
                    <div class="row">
                        <div class="input-group-sm col">
                            <button type="submit" class="btn btn-sm btn-success form-control" asp-route-id="@Model.CommissionPayment.Id">
                                <partial name="_IconSave" />&nbsp;Annuler
                            </button>
                        </div>
                        <div class="input-group-sm col">
                            <a asp-action="Summary" asp-route-id="@Model.CommissionPayment.Id" class="btn btn-sm btn-warning form-control">
                                <partial name="_IconReturn" />&nbsp;Quitter
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}