
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="input-group-sm col-6">
        <h2 class="text-primary">User's List </h2>
    </div>
    <div class="input-group-sm col-6 text-right">
        @{
            var currentUser = ViewBag.CurrentUser;
        }

        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register" asp-route-currentUserId="@currentUser.Id">
            <partial name="_IconCreate" />
            &nbsp; Create New User
        </a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered table-sm" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Company</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th><a class="btn btn-sm" style="width:100%; height:100%; background-color:green; color:white" asp-action="AddOrEdit"><partial name="_IconCreate" /> Ajouter</a></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{

    <script src="~/js/user.js"></script>
}