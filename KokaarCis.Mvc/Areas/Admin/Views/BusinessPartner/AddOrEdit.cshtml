@model BusinessPartnerViewModel

@{
    Layout = null;
}

<form asp-action="AddOrEdit" asp-route-id="@Model.BusinessPartner.Id" onsubmit="return jQueryAjaxPost(this);">
    <div class="row ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (!Model.BusinessPartner.IsNew())
        {
            <input type="hidden" asp-for="BusinessPartner.Id" />
            <input type="hidden" asp-for="ReturnToDetailView" />
        }
        <div class="input-group-sm col-12">
            @if (!Model.BusinessPartner.IsNew())
            {
                <div class="form-group row pt-1">
                    <div class="input-group-sm col-4">
                        Référence
                    </div>
                    <div class="input-group-sm col-3">
                        <input asp-for="BusinessPartner.Reference" class="form-control" disabled />
                    </div>
                </div>
            }
            <div class="form-group row pt-1">
                <div class="input-group-sm col-4">
                    Nom
                </div>
                <div class="input-group-sm col-7">
                    <input asp-for="BusinessPartner.Name" class="form-control text-capitalize" />
                </div>
            </div>
            <div class="form-group row pt-1">
                <div class="input-group-sm col-4">
                    N° de téléphone
                </div>
                <div class="input-group-sm col-3">
                    <input asp-for="BusinessPartner.PhoneNumber" class="form-control" />
                </div>
            </div>
            <div class="form-group row pt-1">
                <div class="input-group-sm col-4">
                    Commentaire
                </div>
                <div class="input-group-sm col-7">
                    <textarea asp-for="BusinessPartner.Comment" class="form-control"></textarea>
                </div><div class="input-group-sm col-1 p-0">
                    <span asp-validation-for="BusinessPartner.Comment" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row pt-2 pb-2">
                <div class="d-inline-block">
                    <div class="row">
                        @if (!Model.BusinessPartner.IsNew())
                        {
                            <div class="input-group-sm col">
                                <button type="submit" class="btn btn-sm btn-success form-control" asp-route-id="@Model.BusinessPartner.Id">
                                    <partial name="_IconSave" />&nbsp;Enregistrer
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="input-group-sm col">
                                <button type="submit" class="btn btn-sm btn-success form-control">
                                    <partial name="_IconSave" />&nbsp;Enregistrer
                                </button>
                            </div>
                        }
                        @if (Model.ReturnToDetailView)
                        {
                            <div class="input-group-sm col">
                                <a asp-controller="BusinessPartner" asp-action="Summary" asp-route-id="@Model.BusinessPartner.Id" class="btn btn-sm btn-warning form-control">
                                    <partial name="_IconReturn" />&nbsp;Quitter
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="input-group-sm col">
                                <a asp-controller="BusinessPartner" asp-action="Index" class="btn btn-sm btn-warning form-control">
                                    <partial name="_IconReturn" />&nbsp;Quitter
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}